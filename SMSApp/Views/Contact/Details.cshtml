@model IEnumerable<SMSApp.Models.Contact>

@{
    ViewBag.Title = "Details";
}

<h2>Phone Book</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Forename)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prefix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Forename)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prefix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            <a href="@Url.Action("SendText", "Text", new {Prefix = @item.Prefix, Number = @item.Number })"><input type="submit" value="Send Text" class="btn btn-default" /></a>
        </td>
    </tr>
}

</table>
